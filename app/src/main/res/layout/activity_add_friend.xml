<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.codeclan.com.friendshiptracker.AddFriendActivity">

    <EditText
        android:id="@+id/add_first_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_last_name"
        android:layout_alignStart="@+id/add_last_name"
        android:layout_marginTop="53dp"
        android:hint="@string/first_name_hint"
        android:inputType="textNoSuggestions"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="183dp" />


    <EditText
        android:id="@+id/add_last_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:hint="@string/last_name_hint"
        android:inputType="textNoSuggestions"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_below="@+id/add_first_name"
        android:layout_centerHorizontal="true" />
    
    <EditText
        android:id="@+id/add_days_total"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/total_days_string"
        android:inputType="number"
        android:textSize="10dp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/add_last_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/friend_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addFriendButtonClicked"
        android:text="@string/add_friend_button"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/add_days_total"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
