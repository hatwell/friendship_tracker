<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/congruent_pentagon"
    tools:context="example.codeclan.com.friendshiptracker.AddFriendActivity">

    <EditText
        android:id="@+id/add_first_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_last_name"
        android:layout_alignStart="@+id/add_last_name"
        android:layout_marginTop="53dp"
        android:hint="@string/first_name_hint"
        android:inputType="textNoSuggestions"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="183dp" />


    <EditText
        android:id="@+id/add_last_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:hint="@string/last_name_hint"
        android:inputType="textNoSuggestions"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_below="@+id/add_first_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/how_many_days_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_many_days_label"
        android:layout_below="@+id/add_last_name"
        android:layout_alignLeft="@+id/add_last_name"
        android:layout_alignStart="@+id/add_last_name"
        android:layout_marginTop="28dp" />

    <EditText
        android:id="@+id/add_days_total"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:inputType="number"
        android:textSize="13sp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/add_last_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/friend_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addFriendButtonClicked"
        android:text="@string/add_friend_button"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/add_days_total"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
